{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Gaming Roulette",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.gaming-roulette",
      "icon": [
        "icons/icon.png",
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.svg",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Gaming Roulette",
        "height": 400,
        "width": 800,
        "minHeight": 400,
        "minWidth": 800,
        "maxHeight": 600,
        "maxWidth": 1200,
        "transparent": true,
        "decorations": false
      }
    ]
  }
}
